{
  "name": "ai-rules-syncer",
  "displayName": "AI Rules Syncer",
  "description": "Automatically sync AI coding rules and instructions across multiple AI assistants (Claude, Cursor, GitHub Copilot, Windsurf, and more)",
  "version": "0.0.1",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "author": {
    "name": "Feras Abdalrahman",
    "url": "https://marketplace.visualstudio.com/publishers/doonfrs"
  },
  "publisher": "doonfrs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/doonfrs/ai-rules-syncer.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiRulesSyncer.generateRulesFile",
        "title": "Generate AI Rules File",
        "category": "AI Rules Syncer"
      },
      {
        "command": "aiRulesSyncer.syncFiles",
        "title": "Sync AI Rules Now",
        "category": "AI Rules Syncer"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "eslint": "^8.28.0",
    "@vscode/test-electron": "^2.2.0"
  }
}