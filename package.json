{
  "name": "ai-rules-syncer",
  "displayName": "AI Rules Syncer",
  "description": "VS Code extension for syncing AI rules",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiRulesSyncer.generateRulesFile",
        "title": "Generate AI Rules File",
        "category": "AI Rules Syncer"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "eslint": "^8.28.0",
    "@vscode/test-electron": "^2.2.0"
  }
}